.container {
    box-sizing: border-box;
    display: flex;
    font-size: 20rpx;
    color: #888888;
    background-color: #fff;
    padding: 30rpx 30rpx;
    border-radius: 20rpx;
}

.left {
    position: relative;
}

.type-tag {
    padding: 10rpx;
    width: max-content;
    background-color: #333333;
    color: #fff;
    position: absolute;
    right: 0;
    z-index: 2;
    opacity: 0.7;
    font-size: 14rpx;
}

.cover-image {
    width: 180rpx;
    height: 190rpx;
    border-radius: 10rpx;
}

.right {
    width: 100%;
    margin-left: 30rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.row {
    display: flex;
    align-items: center;
}

.service-name {
    color: #333333;
    min-width: 100rpx;
    max-width: 340rpx;
    font-size: 32rpx;

    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}

.category-tag {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.tag-text {
    color: #333333;
    margin-left: 10rpx;
}

.publisher {
    display: flex;
    align-items: center;
}

.publisher-avatar {
    margin-right: 10rpx;
}

.avatar {
    width: 40rpx;
    height: 40rpx;
    border-radius: 20rpx;
}

.score {
    margin-left: 30rpx;
    color: #f27013;
}

.price {
    font-size: 32rpx;
    color: red;
}

.label {
    font-size: 24rpx;
}

.row-last {
    justify-content: space-between;
}
