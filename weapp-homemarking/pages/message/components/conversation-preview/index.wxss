@import '/common/css/theme.wxss';

.container {
    box-sizing: border-box;
    display: flex;
    background-color: #fff;
    padding: 30rpx 30rpx;
}

.left {
    box-sizing: border-box;
}

.right {
    box-sizing: border-box;
    width: 100%;
    margin-left: 30rpx;
    border-bottom: 1px solid #efefef;
}

.avatar {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}

.right-top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10rpx;
}

.last-send-time {
    color: #888888;
    font-size: 28rpx;
}

.right-bottom {
    color: #888888;
    font-size: 28rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    overflow: hidden;
}
